{
  "name": "sub2srt Converter for Chrome",
  "version": "0.11.0",
  "manifest_version": 2,
  "minimum_chrome_version": "35",
  "app": {
    "background": {
      "scripts": [
        "background.js"
      ]
    }
  },
  "permissions": [
    {
      "fileSystem": [
        "write",
        "retainEntries",
        "directory"
      ]
    },
    "storage"
  ],
  "file_handlers": {
    "text": {
      "types": [
        "text/*"
      ]
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "offline_enabled": true
}